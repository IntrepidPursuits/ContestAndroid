<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/overview_card_bottom_margin"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/category_item_title"
        style="@style/AvenirNext_DemiBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="@dimen/category_overview_margin_left"
        android:textSize="@dimen/category_title_text_size"
        />

    <TextView
        android:id="@+id/category_item_description"
        android:textAppearance="@string/AvenirNext_Regular"
        android:textSize="@dimen/category_description_text_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/category_overview_margin_left"
        />

</LinearLayout>
