<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_join"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.intrepid.contest.screens.entrysubmission.join.JoinActivity"
    >

    <Button
        android:id="@+id/enter_code_submit_button"
        style="@style/AppTheme.BottomNavigationButton"
        android:enabled="false"
        android:text="@string/common_submit"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/enter_code_submit_button"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <io.intrepid.contest.customviews.ClearableEditText
            android:id="@+id/enter_code_text_view"
            style="@style/AppTheme.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_code"
            />

    </FrameLayout>

</RelativeLayout>
