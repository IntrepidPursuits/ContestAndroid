<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/entry_submission_card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/entry_submission_image_size"
    android:layout_margin="@dimen/activity_vertical_margin"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_default_elevation"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        >

        <TextView
            android:paddingTop="@dimen/activity_vertical_margin"
            android:id="@+id/entry_submission_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/default_zero_score"
            android:textSize="@dimen/text_view_label_textsize"
            />

        <TextView
            android:id="@+id/entry_submission_title_field"
            style="@style/AvenirNext_DemiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="@dimen/submission_title_bottom_margin"
            android:textSize="@dimen/text_view_label_textsize"
            />

        <ImageView
            android:id="@+id/entry_submission_image"
            android:layout_width="@dimen/entry_submission_image_size"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:src="@drawable/default_entry_icon"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>
