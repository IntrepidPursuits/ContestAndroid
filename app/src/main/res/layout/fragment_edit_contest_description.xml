<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/activity_vertical_margin"
    >

    <io.intrepid.contest.customviews.HintLabelEditText
        android:id="@+id/contest_description_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/description_edittext_margin_right"
        android:gravity="center"
        android:hint="@string/description_optional"
        android:inputType="textCapSentences"
        android:label="@string/description_optional"
        android:paddingTop="@dimen/description_edittext_padding_top"
        android:textSize="@dimen/contest_description_edittext_textsize"
        />
</RelativeLayout>
