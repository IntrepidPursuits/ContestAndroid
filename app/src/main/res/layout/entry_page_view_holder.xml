<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/entry_image_submit_button"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/top_horizontal_entry_image_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/rating_image_card_height"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/generic_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <Button
        android:id="@+id/entry_score_review_button"
        style="@style/AppTheme.BottomNavigationButton"
        android:text="@string/review_rating"
        android:textAllCaps="true"
        android:visibility="gone"
        />
</RelativeLayout>
