<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_waiting_submissions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="io.intrepid.contest.screens.conteststatus.waitingsubmissions.WaitingSubmissionsFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@style/AvenirNext_DemiBold"
            android:gravity="center"
            android:text="@string/status_waiting_submissions_title"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/contest_status_title_textsize"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription"
            />

        <TextView
            android:id="@+id/waiting_submissions_description_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@style/AvenirNext_Medium"
            android:gravity="center"
            android:text="@string/status_waiting_submissions_description"
            android:textColor="@color/colorTextLight"
            android:textSize="@dimen/contest_status_description_textsize"
            />
    </LinearLayout>

</FrameLayout>
