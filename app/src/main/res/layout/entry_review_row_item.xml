<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/entry_review_row_size"
              android:layout_marginBottom="@dimen/activity_vertical_margin"
              android:layout_marginStart="@dimen/activity_vertical_margin"
              android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/entry_review_row_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:id="@+id/entry_review_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/entry_review_row_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/AvenirNext_DemiBold"
            android:textSize="@dimen/entry_review_row_title_textsize"
            />

        <TextView
            android:id="@+id/entry_review_row_contestant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

</LinearLayout>
